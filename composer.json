{
  "name": "factorio-item-browser/api-import",
  "description": "The project which imports the data generated by the export into the database.",
  "homepage": "https://github.com/factorio-item-browser/api-import",
  "type": "project",
  "keywords": ["Factorio Item Browser", "FIB", "import", "BluePsyduck"],
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "BluePsyduck",
      "email": "bluepsyduck@gmx.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^7.2",
    "ext-json": "*",
    "ext-pdo": "*",
    "bluepsyduck/zend-autowire-factory": "^1.0",
    "factorio-item-browser/api-database": "dev-project-phoenix",
    "factorio-item-browser/common": "^1.0",
    "factorio-item-browser/export-data": "dev-project-phoenix",
    "zendframework/zend-config-aggregator": "^1.0",
    "zendframework/zend-servicemanager": "^3.3",
    "zfcampus/zf-console": "^1.3"
  },
  "require-dev": {
    "bluepsyduck/test-helper": "^1.0",
    "phpstan/phpstan": "^0.11",
    "phpstan/phpstan-phpunit": "^0.11",
    "phpstan/phpstan-strict-rules": "^0.11",
    "phpunit/phpunit": "^8.0",
    "rregeer/phpunit-coverage-check": "^0.1",
    "squizlabs/php_codesniffer": "^3.3"
  },
  "autoload": {
    "psr-4": {
      "FactorioItemBrowser\\Api\\Import\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FactorioItemBrowserTest\\Api\\Import\\": "test/src"
    }
  },
  "scripts": {
    "build-cache": [
      "rm -rf data/cache/*",
      "bin/build-cache.php",
      "vendor/bin/doctrine orm:generate-proxies",
      "chown -R www-data:www-data data/cache/*"
    ],
    "coverage-check": "coverage-check test/coverage/clover.xml 100",
    "phpcbf": "phpcbf -p --colors",
    "phpcs": "phpcs -p --colors",
    "phpstan": "phpstan analyse --no-interaction --ansi",
    "phpunit": "phpunit --colors=always --coverage-html=test/coverage --coverage-clover=test/coverage/clover.xml",
    "post-autoload-dump": [
      "mkdir -p data/cache data/log && chmod 0777 data/cache data/log"
    ],
    "test": [
      "@composer validate --strict",
      "@phpunit",
      "@coverage-check",
      "@phpcs",
      "@phpstan"
    ]
  }
}
